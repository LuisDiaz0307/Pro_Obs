{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@mi-proyecto/core": ["../core/src/index.ts"],
      "@mi-proyecto/core/*": ["../core/src/*"]
    },
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false
  },
  "include": ["src/**/*", "../core/src/**/*"],
  "exclude": ["node_modules"]
}
